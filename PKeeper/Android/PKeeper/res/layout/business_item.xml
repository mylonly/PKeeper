<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/theme_padding"
    android:background="#ffffff" >
	  <ImageView
	        android:id="@+id/iv_businessitem"
	        android:layout_width="@dimen/loadpic_wh"
	        android:layout_height="@dimen/loadpic_wh"
	        />   
	
	   
    <TextView
        android:id="@+id/businessitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/businessitem_date"
        android:layout_toRightOf="@+id/iv_businessitem"
        android:textColor="#000000"
	    android:textSize="17sp"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:text="ddddddddddddddddddd" />
    <TextView
        android:id="@+id/businessitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
	    android:text="aaaaaaaaaaaaaaaaaa" />
    <TextView
        android:id="@+id/businessitem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/businessitem_title"
        android:layout_toRightOf="@+id/iv_businessitem"
        android:maxLines="2"
        android:ellipsize="end"
	    android:text="dfsafdfsdfsdfsafdsfaaaaaaaaaafsdafsdaffdsfsdafsdfsdffdsf" />
    
</RelativeLayout>