<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_empty_margin"
    android:paddingBottom="@dimen/activity_empty_margin" >

    <ImageView
        android:id="@+id/iv_userinfo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" /> 
        
    <TextView
        android:id="@+id/userinfo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_userinfo_type"
        android:layout_marginLeft="@dimen/activity_empty_margin"
        android:textColor="#000000"
	    android:textSize="18sp" />
    <TextView
        android:id="@+id/userinfo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userinfo_type"
        android:layout_toLeftOf="@+id/iv_userinfo_content"
        android:paddingLeft="@dimen/activity_empty_margin"
        android:paddingRight="@dimen/activity_empty_margin"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:maxLines="2"
        android:textColor="#000000"
        android:ellipsize="end"
	    android:textSize="18sp" />
    
    <ImageView
        android:id="@+id/iv_userinfo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_empty_margin"
        android:background="@drawable/keepinfo_10"/> 
    
</RelativeLayout>